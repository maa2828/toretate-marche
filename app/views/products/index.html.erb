<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">🌱 とれたてマルシェ</h1>
    <% if current_user&.seller? %>
      <%= link_to "商品を出品する", new_product_path, class: "bg-green-600 text-white px-6 py-3 rounded hover:bg-green-700" %>
    <% end %>
  </div>

  <% if @products.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <div class="border rounded-lg overflow-hidden shadow hover:shadow-lg transition">
          <%= link_to product_path(product) do %>
            <% if product.image.attached? %>
            <%= image_tag product.image, class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                <span class="text-gray-400">画像なし</span>
              </div>
            <% end %>
            
            <div class="p-4">
              <h2 class="text-xl font-semibold mb-2"><%= product.title %></h2>
              <p class="text-gray-600 mb-2 line-clamp-2"><%= product.description %></p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-green-600">¥<%= number_with_delimiter(product.price) %></span>
                <span class="text-sm text-gray-500">在庫: <%= product.stock_quantity %>個</span>
              </div>
              <p class="text-sm text-gray-500 mt-2">出品者: <%= product.seller.name %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <p class="text-gray-500 text-xl">まだ商品がありません</p>
      <% if current_user&.seller? %>
        <p class="mt-4">
          <%= link_to "最初の商品を出品する", new_product_path, class: "text-green-600 hover:underline" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
