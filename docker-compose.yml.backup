
services:
  db:
    image: postgres
    platform: linux/amd64
    restart: always
    environment:
      TZ: Asia/Tokyo              # ← スペース6個TZ: Asia/Tokyo
      DATABASE_HOST: db           # ← スペース6個
      DATABASE_USERNAME: root     # ← スペース6個
      DATABASE_PASSWORD: password # ← スペース6個
    volumes:
      - postgres_data:/var/lib/postgresql/data
    #ports:
    #  - 5432:5432
  web:
    build: .
    command: bash -c "rm -f tmp/pids/server.pid && bundle exec rails s -p 3000 -b '0.0.0.0'"
    tty: true
    stdin_open: true
    volumes:
      - .:/app
      - bundle_data:/usr/local/bundle:cached
      - node_modules:/app/node_modules
    environment:
      TZ: Asia/Tokyo
    DATABASE_HOST: db          # 追加
    DATABASE_USERNAME: root    # 追加
    DATABASE_PASSWORD: password # 追加
    #SELENIUM_DRIVER_URL: http://chrome:4444/wd/hub
    ports:
      - "3000:3000"
    depends_on:
      - db
       # - chrome  # 削除

 # chrome サービス全体を削除
  # chrome:
  #   image: seleniarm/standalone-chromium:latest
  #   ports:
  #     - 4444:4444

volumes:
  postgres_data:
  bundle_data:
  node_modules:
